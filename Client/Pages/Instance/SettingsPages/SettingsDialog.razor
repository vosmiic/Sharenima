@inherits Sharenima.Client.ComponentCode.Settings.SettingsDialog
<MatIconButton data-bs-toggle="modal" data-bs-target="#settingsModal" Icon="settings"></MatIconButton>

<div class="modal" tabindex="-1" role="dialog" id="settingsModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Instance Settings</h5>
      </div>
      <div class="modal-body">
        <SettingsIndex InstanceId="@InstanceId"/>
      </div>
    </div>
  </div>
</div>